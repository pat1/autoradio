from autoradio import daemon
import autoradio.settings

dbusd = daemon.Daemon(
        stdin="/dev/null",
        stdout=autoradio.settings.logfileplayer,
        stderr=autoradio.settings.errfileplayer,
        pidfile=autoradio.settings.lockfileplayer,
        user=autoradio.settings.userplayer,
        group=autoradio.settings.groupplayer
)

def main(self):

    import subprocess

    busaddress = autoradio.settings.busaddressplayer


    if busaddress is not None:

        self.procs=[subprocess.Popen(["dbus-daemon",  "--session",
            '--address='+busaddress, "--nofork"],cwd=self.cwd)]
    else:
        print "busaddress is not defined in config file: dbus-daemon not started"

if __name__ == '__main__':

    import sys, os
    dbusd.cwd=os.getcwd()

    if dbusd.service():

        sys.stdout.write("Daemon started with pid %d\n" % os.getpid())
        sys.stdout.write("Daemon stdout output\n")
        sys.stderr.write("Daemon stderr output\n")

        main(dbusd)  # (this code was run as script)

        for proc in dbusd.procs:
            proc.wait()

        sys.exit(0)


